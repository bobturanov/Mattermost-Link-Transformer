{
    "manifest_version": 3,
    "name": "Mattermost Link Transformer",
    "version": "1.0",
    "description": "Transforms links to open Mattermost app directly.",
    "permissions": ["webNavigation", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
      "https://*.mattermost.com/*"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "hello.html"
    }
  }